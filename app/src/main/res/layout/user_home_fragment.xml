<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="10">

        <RelativeLayout
            android:id="@+id/car_auto_mechanic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/auto_mechanic_image_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/round_button_background"
                android:src="@mipmap/car_auto_mechanic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/auto_mechanic_image_button"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:clickable="false"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="auto mechanic">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/car_wash"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/car_wash_image_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="@drawable/round_button_background"
                android:src="@mipmap/car_wash" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/car_wash_image_button"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:clickable="false"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="car wash"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_layout_two"
        android:layout_below="@+id/main_layout_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="10">

        <RelativeLayout
            android:id="@+id/car_parts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/car_parts_image_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/round_button_background"
                android:src="@mipmap/car_parts" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/car_parts_image_button"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:clickable="false"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="buy car parts">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buy_fuel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/buy_fuel_image_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="@drawable/round_button_background"
                android:src="@mipmap/buy_fuel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/buy_fuel_image_button"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:clickable="false"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="buy fuel"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_layout_three"
        android:layout_below="@+id/main_layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="10">

        <RelativeLayout
            android:id="@+id/car_towing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/car_towing_image_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:layout_centerInParent="true"
                android:background="@drawable/round_button_background"
                android:src="@mipmap/car_towing" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/car_towing_image_button"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:clickable="false"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="car towing service">
            </TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/car_promos"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:padding="5dp">

            <ImageButton
                android:id="@+id/car_promos_image_button"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:background="@drawable/round_button_background"
                android:src="@mipmap/promo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/car_promos_image_button"
                android:textColor="#000"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:clickable="false"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:text="car promos"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
